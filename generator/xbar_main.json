{
    "name": "main",
    "type": "xbar",
    "clock": "clk_main_i",
    "clock_connections": {
        "clk_main_i":   "main"
    },
    "reset": "rst_main_ni",
    "reset_connections": {
        "rst_main_ni":   "sys"
    },
    "nodes": [
        {
            "name": "dma",
            "type": "host",
            "clock": "clk_main_i",
            "reset": "rst_main_ni",
            "addr_space": "hart",

            "xbar": false,
            "pipeline": false
        },
        {
            "name": "management_scratchpad_instr",
            "type": "device",
            "clock": "clk_main_i",
            "reset": "rst_main_ni",
            "pipeline": "True",
            "req_fifo_pass": "False",
            "rsp_fifo_pass": "False",

            "xbar": false,
            "addr_range": [{
                "base_addrs": {"hart":"0x00000000"},
                "size_byte": "0x10000"
            }]
        },
        {
            "name": "management_scratchpad_data",
            "type": "device",
            "clock": "clk_main_i",
            "reset": "rst_main_ni",
            "pipeline": "True",
            "req_fifo_pass": "False",
            "rsp_fifo_pass": "False",

            "xbar": false,
            "addr_range": [{
                "base_addrs": {"hart":"0x00100000"},
                "size_byte": "0x10000"
            }]
        },
[[[cog import XbarGenerator as g; g.generateDevices() ]]]
[[[end]]]
    ],
    "connections": {
        "dma": [
            "management_scratchpad_data",
            "management_scratchpad_instr",
[[[cog import XbarGenerator as g; g.generateConnections() ]]]
[[[end]]]
        ]
    }
}
