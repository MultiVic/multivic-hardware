{
    "name": "main",
    "type": "xbar",
    "clock": "clk_main_i",
    "clock_connections": {
        "clk_main_i":   "main"
    },
    "reset": "rst_main_ni",
    "reset_connections": {
        rst_main_ni:   "sys"
    },
    "nodes": [
        {
            "name": "management_core_data",
            "type": "host",
            "clock": "clk_main_i",
            "reset": "rst_main_ni",
