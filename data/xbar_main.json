            "xbar": false,
            "pipeline": false
        },
        {
            "name": "management_scratchpad_data",
            "type": "device",
            "clock": "clk_main_i",
            "reset": "rst_main_ni",

            "xbar": false,
            "addr_range": [{
                "base_addrs": {"hart":"0x00100000"},
                "size_byte": "0x10000"
            }]
        },
        {
            "name": "uart",
            "type": "device",
            "clock": "clk_main_i",
            "reset": "rst_main_ni",

            "xbar": false,
            "addr_range": [{
                "base_addrs": {"hart":"0x80001000"},
                "size_byte": "0x1000"
            }]
        },
        {
            "name": "vicuna0_scratchpad_instr",
            "type": "device",
            "clock": "clk_main_i",
            "reset": "rst_main_ni",

            "xbar": false,
            "addr_range": [{
                "base_addrs": {"hart":"0x00200000"},
                "size_byte": "0x10000"
            }]
        },
        {
            "name": "vicuna0_scratchpad_data",
            "type": "device",
            "clock": "clk_main_i",
            "reset": "rst_main_ni",

            "xbar": false,
            "addr_range": [{
                "base_addrs": {"hart":"0x00300000"},
                "size_byte": "0x10000"
            }]
        },
        {
            "name": "vicuna1_scratchpad_instr",
            "type": "device",
            "clock": "clk_main_i",
            "reset": "rst_main_ni",

            "xbar": false,
            "addr_range": [{
                "base_addrs": {"hart":"0x00400000"},
                "size_byte": "0x10000"
            }]
        },
        {
            "name": "vicuna1_scratchpad_data",
            "type": "device",
            "clock": "clk_main_i",
            "reset": "rst_main_ni",

            "xbar": false,
            "addr_range": [{
                "base_addrs": {"hart":"0x00500000"},
                "size_byte": "0x10000"
            }]
        }
