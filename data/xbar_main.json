    "connections": {
        "management_core_data": [
            "management_scratchpad_data",
            "vicuna0_scratchpad_data",
            "vicuna0_scratchpad_instr",
            "vicuna1_scratchpad_data",
            "vicuna1_scratchpad_instr",
            "uart"
        ]
